<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
   <TextView
       android:id="@+id/answer"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Answer"
       android:textColor="@color/black"
        android:textAlignment="center"
       android:layout_marginTop="70dp">

   </TextView>

    <RelativeLayout
        android:layout_marginTop="446dp"
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >
        <Button
            android:id="@+id/c"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="C"

            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:id="@+id/perc"
            android:layout_toRightOf="@+id/c"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:layout_width="103dp"
            android:id="@+id/delete"
            android:layout_height="wrap_content"
            android:text="__"
            android:layout_toRightOf="@+id/perc"
            android:textColor="@color/black"
            android:background="@color/white"/>

        <Button
            android:id="@+id/divide"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/delete"
            android:background="@color/white"
            android:text="/"
            android:textColor="@color/black" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay2"
        android:layout_below="@+id/lay1"



        >
        <Button
            android:id="@+id/seven"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="7"

            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:id="@+id/eight"
            android:layout_toRightOf="@+id/seven"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:layout_width="103dp"
            android:id="@+id/nine"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_toRightOf="@+id/eight"
            android:textColor="@color/black"
            android:background="@color/white"/>

        <Button
            android:id="@+id/multiply"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nine"
            android:background="@color/white"
            android:text="X"
            android:textColor="@color/black" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay3"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/lay2"
        >
        <Button
            android:id="@+id/four"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="4"

            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:id="@+id/five"
            android:layout_toRightOf="@+id/four"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:layout_width="103dp"
            android:id="@+id/six"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_toRightOf="@+id/five"
            android:textColor="@color/black"
            android:background="@color/white"/>

        <Button
            android:id="@+id/substract"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/six"
            android:background="@color/white"
            android:text="-"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout


        android:id="@+id/lay4"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay3"
        android:layout_alignParentEnd="true"




        >
        <Button
            android:id="@+id/one"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="1"

            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:id="@+id/two"
            android:layout_toRightOf="@+id/one"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:layout_width="103dp"
            android:id="@+id/three"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_toRightOf="@+id/two"
            android:textColor="@color/black"
            android:background="@color/white"/>

        <Button
            android:id="@+id/add"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/three"
            android:background="@color/white"
            android:text="+"
            android:textColor="@color/black" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/lay5"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay4"


        >
        <Button
            android:id="@+id/doubleZero"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="00"

            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:id="@+id/zero"
            android:layout_toRightOf="@+id/doubleZero"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:layout_width="103dp"
            android:id="@+id/dot"
            android:layout_height="wrap_content"
            android:text="."
            android:layout_toRightOf="@+id/zero"
            android:textColor="@color/black"
            android:background="@color/white"/>



        <Button
            android:id="@+id/equal"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dot"
            android:layout_marginLeft="0dp"
            android:shadowColor="#D15858"

            android:background="#E8A9A9"

            android:text="="
            android:textColor="@color/black" />

    </RelativeLayout>

</RelativeLayout>